<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
    <link rel="stylesheet" href="/css/login_style.css">
    <style>

    /* Gaya untuk card */
.container {
    background-color: #DEB887;
    background-size: cover;
    display: flex;
    flex-direction: column;
    min-height: 100vh; 
    justify-content: flex-start; 
    align-items: center; 

}


body, html {
    margin: 0;
    padding: 0;
    height: 100%; 
    width: 100%;
    background-color: #DEB887;
}

.card {
    border: 1px solid #ddd;
    border-radius: 8px;
    margin: 10px;
    padding: 20px;
    width: 200px;
    background-color: #f9f9f9;
}

.card h3 {
    font-size: 1.2em;
    margin-bottom: 10px;
}

.card p {
    font-size: 1em;
    margin-bottom: 5px;
}

.todo-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 20px;
    flex-grow: 1; 
}

.btn {
    background-color: #4CAF50;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin: 5px;
    text-decoration: none;
    display: inline-block; 
    text-align: center; 
}


.btn-primary {
    width: 100px; 
    padding: 10px 0; 
}

.btn-danger {
    background-color: #f44336;
}

.btn-warning {
    background-color: #ff9800;
}

.btn:hover {
    opacity: 0.8;
}

/* Footer */
footer {
    position: relative; /* Default positioning */
    background-color: black;
    color: white;
    text-align: center;
    padding: 20px 0;
    margin-top: auto; 
    width: 100%; 
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); 
}



footer a {
    color: #f1f1f1;
    text-decoration: none;
}

/* General Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Navbar Section */
.navbar {
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%; 
    background-color: #333;
    color: white; 
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px; 
    z-index: 1000; 
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); 
}

/* Logo Container */
.logo-container {
    display: flex;
    align-items: center;
}

.logo {
    height: 40px; 
    width: auto; 
}

/* Navbar Links */
.navbar-links {
    display: flex;
    gap: 20px; }

.navbar-link {
    text-decoration: none; 
    color: white; 
    font-size: 16px; 
    transition: color 0.3s ease; 
}

.navbar-link:hover {
    color: #4CAF50; 
}

/* Sign-Out Button */
.sign-out-container {
    display: flex;
    align-items: center;
}

.sign-out-button {
    text-decoration: none; 
    color: white; 
    font-size: 16px; 
    padding: 8px 16px; 
    background-color: black; /* Green background */
    border-radius: 4px; /* Rounded corners */
    transition: background-color 0.3s ease, color 0.3s ease; /* Smooth hover effect */
}

.sign-out-button:hover {
    background-color: #45a049; 
    color: white; 
}

/* Spacing Adjustment for Content */
body {
    padding-top: 70px; 
}

/* Responsive Design */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column; 
        padding: 15px;
    }

    .navbar-links {
        flex-direction: column; 
        gap: 10px; 
    }

    .sign-out-button {
        font-size: 14px; 
        padding: 6px 12px; 
    }
}


    </style>
</head>
<body>

  <!-- Navbar Section -->
<header class="navbar">
    <div class="logo-container">
        <img src="/image/library1.png" alt="Logo" class="logo">
    </div>
    <nav class="navbar-links">
        <a href="/" class="navbar-link">Home</a>
        <a href="/contact" class="navbar-link">Contact</a>
        <a href="/todo" class="navbar-link">Todo</a>
    </nav>
    <div class="sign-out-container">
        <a href="/login" class="sign-out-button">Sign Out</a>
    </div>
</header>

    <!-- Main Body -->
    <div class="container">
        <h1>List Book</h1>
        <a href="/add" class="btn btn-primary">Add Book</a>

        <div id="todoList" class="todo-list">
            <!-- Loop untuk menampilkan buku -->
            <% if (todos && todos.length > 0) { %>
                <% todos.forEach(function(todo) { %>
                    <div class="card">
                        <h3><%= todo.nama_buku %></h3>
                        <p>Genre: <%= todo.genre %></p>
                        <p>Tahun Terbit: <%= todo.tahun_terbit %></p>
                        
                        <!-- Tombol Edit -->
                        <a href="/edit/<%= todo.id %>" class="btn btn-warning">Edit</a>
                        
                        <!-- Tombol Delete -->
                        <form action="/delete/<%= todo.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah Anda ingin menghapus data ini?')">Delete</button>
                        </form>
                    </div>
                <% }); %>
            <% } else { %>
                <p>Tidak ada buku yang tersedia.</p>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; Copyright</p>
        <p><a href="#">Muthia Sasi </a> | <a href="mailto:rei@example.com">Email</a></p>
    </footer>

    <script src="todo.js"></script>
</body>
</html>
